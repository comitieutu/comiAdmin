@page
@model ListModel
@{
    ViewData["Title"] = "List";
}

<h3><i class="fa fa-angle-right"></i> All sales order</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>All sales order</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-align-justify"></i> Sale Id</th>
                        <th><i class="fa fa-align-justify"></i> User</th>
                        <th><i class="fa fa-align-justify"></i> Status</th>
                        <th><i class="fa fa-align-justify"></i> Payment</th>
                        <th><i class="fa fa-align-justify"></i> Delivery</th>
                        <th><i class="fa fa-align-justify"></i> Total price</th>
                        <th><i class="fa fa-align-justify"></i> Shipper</th>
                        <th><i class="fa fa-calendar"></i> Shipped date</th>
                        <th><i class="fa fa-calendar"></i> Created date</th>
                        <th><i class="fa fa-calendar"></i> Modified date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.SaleOrders)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.ApplicationUser.UserName</td>
                            <td>@s.OrderStatus</td>
                            <td>@s.Payment.Name</td>
                            <td>@s.Delivery.Name</td>
                            <td>@s.TotalPrice</td>
                            <td>@s.ShipperId</td>
                            <td>@s.ShippedDate</td>
                            <td>@s.CreatedDate</td>
                            <td>@s.ModifiedDate</td>
                            <td>
                                <a asp-page="/SaleOrder/Edit" asp-route-id="@s.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                <a asp-page="/SaleOrder/List" asp-page-handler="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

