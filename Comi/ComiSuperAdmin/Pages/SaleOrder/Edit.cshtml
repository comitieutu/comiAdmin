@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h3><i class="fa fa-angle-right"></i> Edit sale order</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i>Edit sale order</h4>
            <form class="form-horizontal style-form" method="post">
                <div class="form-group">
                    <label asp-for="SaleOrder.OrderStatus" class="col-sm-2 col-sm-2 control-label">Status</label>
                    <div class="col-sm-10">
                        <select asp-for="SaleOrder.OrderStatus" asp-items="Html.GetEnumSelectList<OrderStatus>()" class="form-control round-form"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SaleOrder.ShipperId" class="col-sm-2 col-sm-2 control-label">Shipper</label>
                    <div class="col-sm-10">
                        <select asp-for="SaleOrder.ShipperId" asp-items="@Model.Shippers" class="form-control round-form"></select>
                    </div>
                </div>
                <input type="hidden" asp-for="SaleOrder.Id" />
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Edit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

