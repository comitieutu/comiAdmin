@page
@model DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h3><i class="fa fa-angle-right"></i> Sale order detail</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>Sale order detail</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-align-justify"></i> Product</th>
                        <th><i class="fa fa-align-justify"></i> Quantity</th>
                        <th><i class="fa fa-align-justify"></i> Unit price</th>
                        <th><i class="fa fa-align-justify"></i> Discount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.SaleOrderDetails)
                    {
                        <tr>
                            <td>@s.Product.ProductName</td>
                            <td>@s.Quantity</td>
                            <td>@s.UnitPrice</td>
                            <td>@s.Discount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

