@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h3><i class="fa fa-angle-right"></i> Edit delivery method</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i>Edit delivery method</h4>
            <form class="form-horizontal style-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InputModel.Name" class="col-sm-2 col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.Name" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.Price" class="col-sm-2 col-sm-2 control-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.Price" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.Description" class="col-sm-2 col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.Description" type="text" class="form-control round-form">
                    </div>
                </div>
                <input asp-for="InputModel.Id" type="hidden">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

