@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h3><i class="fa fa-angle-right"></i> Edit shipper</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Edit shipper</h4>
            <form class="form-horizontal style-form" method="post">
                <div class="form-group">
                    <label asp-for="InputModel.ContactName" class="col-sm-2 col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.ContactName" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.Company" class="col-sm-2 col-sm-2 control-label">Company</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.Company" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.ContactPhone" class="col-sm-2 col-sm-2 control-label">Sale</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.ContactPhone" type="text" class="form-control round-form">
                    </div>
                </div>
                <input type="hidden" asp-for="InputModel.Id" />   
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



