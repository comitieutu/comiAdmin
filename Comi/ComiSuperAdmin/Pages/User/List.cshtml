@page
@model ListModel
@{
    ViewData["Title"] = "List";
}

<h3><i class="fa fa-angle-right"></i> All user</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>All user</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-align-justify"></i> Email</th>
                        <th><i class="fa fa-align-justify"></i> Phone number</th>
                        <th><i class="fa fa-star"></i> Username</th>
                        <th>Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model.Users)
                    {
                    <tr>
                        <td>
                            <a asp-page="/User/Detail" asp-route-id="@u.Id">@u.Email</a>
                        </td>
                        <td>@u.PhoneNumber</td>
                        <td>@u.UserName</td>
                        <td>
                            <a asp-page="/User/ListRole" asp-route-id="@u.Id" class="btn btn-primary">View</a>
                        </td>
                        <td>
                            <a asp-page="/User/Edit" asp-route-id="@u.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                            <a asp-page="/User/List" asp-page-handler="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

