@page
@model ListRoleModel
@{
    ViewData["Title"] = "ListRole";
}

<h3><i class="fa fa-angle-right"></i> Role of @Model.UserView.Email</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>Roles</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-align-justify"></i> Name</th>
                        <th><i class="fa fa-align-justify"></i> Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model.UserView.UserRoles)
                    {
                        <tr>
                            <td>@u.Role.Name</td>
                            <td>@u.Role.Description</td>
                            <td>
                                <a asp-page="/User/List" asp-page-handler="Delete" asp-route-user="@u.UserId" asp-route-role="@u.RoleId" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Set new role</h4>
            <form class="form-horizontal style-form" method="post">
                <div class="form-group">
                    <label asp-for="RoleId" class="col-sm-2 col-sm-2 control-label">Role</label>
                    <div class="col-sm-10">
                        <select asp-for="RoleId" asp-items="@Model.RoleItem" class="form-control round-form"></select>
                    </div>
                </div>
                <input asp-for="UserView.Id" type="hidden">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Set role</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

