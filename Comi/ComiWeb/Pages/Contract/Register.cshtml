@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item active">Checkout - Address</li>
                        </ol>
                    </nav>
                </div>
                <div id="checkout" class="col-lg-12">
                    <div class="box">
                        <form method="post">
                            @if (Model.PersonInfo == null)
                            {
                                <h1>Checkout - Address</h1>
                                <div class="content py-3">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="PersonInfo.FirstName" for="firstname">Firstname</label>
                                                <input asp-for="PersonInfo.FirstName" id="firstname" type="text" class="form-control">
                                                <span asp-validation-for="PersonInfo.FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="PersonInfo.LastName" for="lastname">Lastname</label>
                                                <input asp-for="PersonInfo.LastName" id="lastname" type="text" class="form-control">
                                                <span asp-validation-for="PersonInfo.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="PersonInfo.Birthday">Birthday</label>
                                                <input asp-for="PersonInfo.Birthday" class="form-control">
                                                <span asp-validation-for="PersonInfo.Birthday" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="PersonInfo.Gender">Gender</label>
                                                <select asp-for="PersonInfo.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                                                <span asp-validation-for="PersonInfo.Gender" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label asp-for="PersonInfo.Address">Address</label>
                                                <input asp-for="PersonInfo.Address" type="text" class="form-control">
                                                <span asp-validation-for="PersonInfo.Address" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label>Country</label>
                                                <select asp-items="@Model.Countries" id="country" class="form-control"></select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label>State or Province</label>
                                                <select asp-items="@Model.StateOrProvinces" id="city" class="form-control"></select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-3">
                                            <div class="form-group">
                                                <label asp-for="PersonInfo.DistrictId">District</label>
                                                <select asp-for="PersonInfo.DistrictId" asp-items="@Model.Districts" id="district" class="form-control"></select>
                                                <span asp-validation-for="PersonInfo.DistrictId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="container mb-5 mt-5">
                                <div class="pricing card-deck flex-column flex-md-row mb-3">
                                    @foreach (var i in Model.Packages)
                                    {
                                        <div class="card card-pricing text-center px-3 mb-4">
                                            <span class="h6 w-60 mx-auto px-4 py-1 rounded-bottom bg-primary text-white shadow-sm">@i.Name</span>
                                            <div class="bg-transparent card-header pt-4 border-0">
                                                <h1 class="h1 font-weight-normal text-primary text-center mb-0" data-pricing-value="15">$<span class="price">@i.Price</span><span class="h6 text-muted ml-2">/ per month</span></h1>
                                            </div>
                                            <div class="card-body pt-0">
                                                <ul class="list-unstyled mb-4">
                                                    <li>@i.Description</li>
                                                </ul>
                                                <div class="card-footer">
                                                    <input type="radio" asp-for="Contract.PackageId" value="@i.Id">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="content py-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Contract.Duration">Duration</label>
                                            <select asp-for="Contract.Duration" asp-items="@Html.GetEnumSelectList<Duration>()" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Warehouse.Name">Warehouse name</label>
                                            <input asp-for="Warehouse.Name" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label asp-for="Warehouse.Address">Address</label>
                                            <input asp-for="Warehouse.Address" type="text" class="form-control">
                                            <span asp-validation-for="Warehouse.Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label >Country</label>
                                            <select asp-items="@Model.Countries" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label>State or Province</label>
                                            <select asp-items="@Model.StateOrProvinces" id="cityWarehouse" class="form-control"></select>                                            
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label asp-for="Warehouse.DistrictId">District</label>
                                            <select asp-for="Warehouse.DistrictId" asp-items="@Model.Districts" id="districtWarehouse" class="form-control"></select>
                                            <span asp-validation-for="Warehouse.DistrictId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Bank.Name">Bank name</label>
                                            <input asp-for="Bank.Name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Bank.BankAccount">Bank account</label>
                                            <input asp-for="Bank.BankAccount" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Bank.Department">Department</label>
                                            <input asp-for="Bank.Department" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Vendor.TaxNumber">Tax number</label>
                                            <input asp-for="Vendor.TaxNumber" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">Register<i class="fa fa-chevron-right"></i></button>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-->
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>
}

