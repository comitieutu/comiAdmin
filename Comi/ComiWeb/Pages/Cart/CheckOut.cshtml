@page
@model CheckOutModel
@{
    ViewData["Title"] = "CheckOut";
    double total = 0;
}

<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item active">Checkout - Address</li>
                        </ol>
                    </nav>
                </div>
                <div id="checkout" class="col-lg-9">
                    <div class="box">
                        <form method="post">
                            <h1>Checkout</h1>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="nav flex-column flex-md-row nav-pills text-center" id="pills-tab" role="tablist">
                                <a id="pills-address-tab" data-toggle="pill" href="#pills-address" role="tab" aria-controls="pills-address" aria-selected="true" class="nav-link flex-sm-fill text-sm-center active"><i class="fa fa-map-marker"></i>Address</a>
                                <a id="pills-delivery-tab" data-toggle="pill" href="#pills-delivery" role="tab" aria-controls="pills-delivery" aria-selected="false" class="nav-link flex-sm-fill text-sm-center disabled"><i class="fa fa-truck"></i>Delivery Method</a>
                                <a id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false" class="nav-link flex-sm-fill text-sm-center disabled"><i class="fa fa-money"></i>Payment Method</a>
                                <a id="pills-review-tab" data-toggle="pill" href="#pills-review" role="tab" aria-controls="pills-review" aria-selected="false" class="nav-link flex-sm-fill text-sm-center disabled"><i class="fa fa-eye"></i>Order Review</a>
                            </div>
                            <div class="tab-content" id="pills-tabContent">
                                <div class="content py-3 tab-pane fade show active" id="pills-address" role="tabpanel" aria-labelledby="pills-address-tab">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.FirstName" for="firstname">Firstname</label>
                                                <input asp-for="InputReceiveProductViewModel.FirstName" id="firstname" type="text" class="form-control">
                                                <span asp-validation-for="InputReceiveProductViewModel.FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.LastName" for="lastname">Lastname</label>
                                                <input asp-for="InputReceiveProductViewModel.LastName" id="lastname" type="text" class="form-control">
                                                <span asp-validation-for="InputReceiveProductViewModel.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.ShipToAddress" for="address">Address</label>
                                                <input asp-for="InputReceiveProductViewModel.ShipToAddress" id="company" type="text" class="form-control">
                                                <span asp-validation-for="InputReceiveProductViewModel.ShipToAddress" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.ShipToStreet" for="street">Street</label>
                                                <input asp-for="InputReceiveProductViewModel.ShipToStreet" id="street" type="text" class="form-control">
                                                <span asp-validation-for="InputReceiveProductViewModel.ShipToStreet" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-lg-4">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.ShipToCountry" for="country">Country</label>
                                                <select asp-for="InputReceiveProductViewModel.ShipToCountry" asp-items="@Model.Countries" id="country" class="form-control"></select>
                                                <span asp-validation-for="InputReceiveProductViewModel.ShipToCountry" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-4">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.ShipToCity" for="city">State or Province</label>
                                                <select asp-for="InputReceiveProductViewModel.ShipToCity" asp-items="@Model.StateOrProvinces" id="city" class="form-control">
                                                    <option value="0">--Select state--</option>
                                                </select>
                                                <span asp-validation-for="InputReceiveProductViewModel.ShipToCity" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-4">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.ShipToDistrict" for="district">District</label>
                                                <select asp-for="InputReceiveProductViewModel.ShipToDistrict" asp-items="@Model.Districts" id="district" class="form-control">
                                                    <option value="0">--Select district--</option>
                                                </select>
                                                <span asp-validation-for="InputReceiveProductViewModel.ShipToDistrict" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.Phone" for="phone">Telephone</label>
                                                <input asp-for="InputReceiveProductViewModel.Phone" id="phone" type="text" class="form-control">
                                                <span asp-validation-for="InputReceiveProductViewModel.Phone" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="InputReceiveProductViewModel.Email" for="email">Email</label>
                                                <input asp-for="InputReceiveProductViewModel.Email" id="email" type="text" class="form-control">
                                                <span asp-validation-for="InputReceiveProductViewModel.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="box-footer d-flex justify-content-between">
                                        <a asp-page="./ShoppingCart" class="btn btn-outline-secondary"><i class="fa fa-chevron-left"></i>Back to basket</a>
                                        <a class="btn btn-primary deliverybtn">Continue to delivery method<i class="fa fa-chevron-right"></i></a>
                                    </div>
                                </div>
                                <div class="content py-3 tab-pane fade" id="pills-delivery" role="tabpanel" aria-labelledby="pills-delivery-tab">
                                    <div class="row">
                                        @foreach (var i in Model.Deliveries)
                                        {
                                            <div class="col-md-6">
                                                <div class="box shipping-method">
                                                    <h4>@i.Name</h4>
                                                    <p>@i.Description</p>
                                                    <div class="box-footer text-center">
                                                        <input type="radio" asp-for="InputSaleOrderViewModel.DeliveryId" value="@i.Id">
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="box-footer d-flex justify-content-between">
                                        <a id="addressbtn" class="btn btn-outline-secondary"><i class="fa fa-chevron-left"></i>Back to address</a>
                                        <a class="btn btn-primary paymentbtn">Continue to payment method<i class="fa fa-chevron-right"></i></a>
                                    </div>
                                </div>
                                <div class="content py-3 tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
                                    <div class="row">
                                        @foreach (var i in Model.Payments)
                                        {
                                            <div class="col-md-6">
                                                <div class="box payment-method">
                                                    <h4>@i.Name</h4>
                                                    <p>@i.Description</p>
                                                    <div class="box-footer text-center">
                                                        <input type="radio" asp-for="InputSaleOrderViewModel.PaymentId" value="@i.Id">
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="box-footer d-flex justify-content-between">
                                        <a class="btn btn-outline-secondary deliverybtn"><i class="fa fa-chevron-left"></i>Back to delivery method</a>
                                        <a id="reviewbtn" class="btn btn-primary">Continue to review<i class="fa fa-chevron-right"></i></a>
                                    </div>
                                </div>
                                <div class="content tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th colspan="2">Product</th>
                                                    <th>Quantity</th>
                                                    <th>Unit price</th>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var i in Model.Items)
                                                {
                                                    total += i.Product.UnitPrice * i.Quantity;
                                                    <tr>
                                                        <td><a href="#"><img src="~/img/@i.Product.ProductDetails.ElementAtOrDefault(0).ProductImage" alt=""></a></td>
                                                        <td><a href="#">@i.Product.ProductName</a></td>
                                                        <td>@i.Quantity</td>
                                                        <td>$@i.Product.UnitPrice</td>
                                                        <td>$@(i.Product.UnitPrice * i.Quantity)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th colspan="4">Total</th>
                                                    <th>$@total</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <div class="box-footer d-flex justify-content-between">
                                        <a class="btn btn-outline-secondary paymentbtn"><i class="fa fa-chevron-left"></i>Back to payment method</a>
                                        <button type="submit" class="btn btn-primary">Check out<i class="fa fa-chevron-right"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <script>
                        $(document).ready(function () {
                            $('.deliverybtn').on('click', function (e) {
                                e.preventDefault()
                                $('#pills-tab a[href="#pills-delivery"]').tab('show')
                                //document.querySelector('#pills-delivery-tab').classList.remove('disabled')
                            });

                            $('#addressbtn').on('click', function (e) {
                                e.preventDefault()
                                $('#pills-tab a[href="#pills-address"]').tab('show')
                            });
                            $('.paymentbtn').on('click', function (e) {
                                e.preventDefault()
                                $('#pills-tab a[href="#pills-payment"]').tab('show')
                            });
                            $('#reviewbtn').on('click', function (e) {
                                e.preventDefault()
                                $('#pills-tab a[href="#pills-review"]').tab('show')
                            });
                        });
                    </script>
                    <!-- /.box-->
                </div>
                <!-- /.col-lg-9-->
                <div class="col-lg-3">
                    <div id="order-summary" class="card">
                        <div class="card-header">
                            <h3 class="mt-4 mb-4">Order summary</h3>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>Order subtotal</td>
                                            <th>$446.00</th>
                                        </tr>
                                        <tr>
                                            <td>Shipping and handling</td>
                                            <th>$10.00</th>
                                        </tr>
                                        <tr>
                                            <td>Tax</td>
                                            <th>$0.00</th>
                                        </tr>
                                        <tr class="total">
                                            <td>Total</td>
                                            <th>$456.00</th>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-3-->
            </div>
        </div>
    </div>
</div>



