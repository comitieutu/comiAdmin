@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="card-body">
    <ul class="nav nav-pills flex-column">
        <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-page="./Index" class="nav-link active"><i class="fa fa-list"></i> Profile</a></li>
        <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a id="change-password" asp-page="./ChangePassword" class="nav-link"><i class="fa fa-heart"></i> Password</a></li>
        @if (hasExternalLogins)
        {
            <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a id="external-login" asp-page="./ExternalLogins" class="nav-link">External logins</a></li>
        }
        <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a asp-page="./TwoFactorAuthentication" class="nav-link"><i class="fa fa-user"></i>Two-factor authentication</a></li>
        <li class="@ManageNavPages.PersonalDataNavClass(ViewContext)"><a asp-page="./PersonalData" class="nav-link"><i class="fa fa-user"></i>Personal data</a></li>
        <li><a asp-page="./UpdateProfile" class="nav-link"><i class="fa fa-user"></i>Update profile</a></li>
        <li><a asp-page="./Order" class="nav-link"><i class="fa fa-user"></i>My orders</a></li>
    </ul>
</div>
