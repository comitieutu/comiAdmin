@page
@model OrderModel
@{
}
<div class="box">
    <h1>My orders</h1>
    <p class="lead">Your orders on one place.</p>
    <p class="text-muted">If you have any questions, please feel free to <a href="contact.html">contact us</a>, our customer service center is working for you 24/7.</p>
    <hr>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Order</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SaleOrders)
                {
                    <tr>
                        <th># @item.OrderNumber</th>
                        <td>@item.CreatedDate</td>
                        <td>$@item.TotalPrice</td>
                        <td><span class="badge badge-warning">@item.OrderStatus</span></td>
                        <td><a asp-page="./OrderDetail" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>