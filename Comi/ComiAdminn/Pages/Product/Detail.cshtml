@page
@model DetailModel
@{
    ViewData["Title"] = "ProductDetail";
}

<h3><i class="fa fa-angle-right"></i> Product detail</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>Product detail</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-align-justify"></i> Name</th>
                        <th><i class="fa fa-star"></i> Photo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.ProductDetails)
                    {
                        <tr>
                            <td><a>@p.Name</a></td>
                            <td> <img src="~/img/@p.ProductImage" /> </td>
                            <td>
                                <a asp-page="/Product/EditPhoto" asp-route-id="@p.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                <a asp-page="/Product/Detail" asp-page-handler="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>