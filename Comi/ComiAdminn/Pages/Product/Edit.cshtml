@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h3><i class="fa fa-angle-right"></i> Edit product</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i>Edit product</h4>
            <form class="form-horizontal style-form" method="post">
                <div class="form-group">
                    <label asp-for="InputModel.ProductName" class="col-sm-2 col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.ProductName" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.ProductDes" class="col-sm-2 col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.ProductDes" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.Quantity" class="col-sm-2 col-sm-2 control-label">Quantity</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.Quantity" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.UnitPrice" class="col-sm-2 col-sm-2 control-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.UnitPrice" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.DesDetail" class="col-sm-2 col-sm-2 control-label">Long description</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.DesDetail" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.CategoryId" class="col-sm-2 col-sm-2 control-label">Category</label>
                    <div class="col-sm-10">
                        <select asp-for="InputModel.CategoryId" asp-items="Model.Categories" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.Brand" class="col-sm-2 col-sm-2 control-label">Brand</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.Brand" type="text" class="form-control round-form">
                    </div>
                </div>
                <input type="hidden" asp-for="InputModel.Id" />
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

