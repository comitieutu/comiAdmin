@page
@model ListModel
@{
    ViewData["Title"] = "ProductList";
}

<h3><i class="fa fa-angle-right"></i> All product</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>Product</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-align-justify"></i> Name</th>
                        <th><i class="fa fa-align-justify"></i> Description</th>
                        <th><i class="fa fa-align-justify"></i> Description full</th>
                        <th><i class="fa fa-bullhorn"></i> Category</th>
                        <th><i class="fa fa-bullhorn"></i> Brand</th>
                        <th><i class="fa fa-star"></i> Quantity</th>
                        <th><i class="fa fa-star"></i> Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.ProductModels)
                    {
                        <tr>
                            <td>
                                <a asp-page="/Product/Detail" asp-route-id="@p.Id">@p.ProductName</a>
                            </td>
                            <td>@p.ProductDes</td>
                            <td>@p.DesDetail</td>
                            <td>
                                <a asp-page="/Category/Detail" asp-route-id="@p.Category.Id">@p.Category.CategoryName</a>
                            </td>
                            <td>
                                <a>@p.Brand</a>
                            </td>
                            <td>@p.Quantity</td>
                            <td>@p.UnitPrice</td>
                            <td>
                                <a asp-page="/Product/Edit" asp-route-id="@p.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                <a asp-page="/Product/List" asp-page-handler="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

