@page
@model NewPhotoModel
@{
    ViewData["Title"] = "NewPhoto";
}

<h3><i class="fa fa-angle-right"></i> New photo</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> New photo</h4>
            <form class="form-horizontal style-form" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="control-label col-md-3">Image</label>
                    <div class="col-md-4">
                        <input asp-for="Files" type="file" class="default" multiple />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

