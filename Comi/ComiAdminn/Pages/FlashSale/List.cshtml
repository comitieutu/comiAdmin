@page
@model ListModel
@{
    ViewData["Title"] = "List";
}

<h3><i class="fa fa-angle-right"></i> All flash sales</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>All flash sales</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> Name</th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Descrition</th>
                        <th><i class="fa fa-windows"></i> Sale</th>
                        <th><i class="fa fa-bullhorn"></i> Start date</th>
                        <th><i class="fa fa-bullhorn"></i> End date</th>
                        <th><i class="fa fa-windows"></i> Photo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var f in Model.FlashSaleModels)
                    {
                    <tr>
                        <td>@f.Name</td>
                        <td>@f.Description</td>
                        <td>@f.Sale</td>
                        <td>@f.StartDate</td>
                        <td>@f.EndDate</td>
                        <td><img src="~/img/@f.Image"/></td>
                        <td>
                            <a asp-page="/FlashSale/Edit" asp-route-id="@f.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                            <a asp-page="/FlashSale/List" asp-route-id="@f.Id" asp-page-handler="Delete" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


