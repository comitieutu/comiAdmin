@page
@model DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h3><i class="fa fa-angle-right"></i> Category detail</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><a asp-page="/Category/List">All category</a><i class="fa fa-angle-right"></i>Category detail</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> Name</th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Descrition</th>
                        <th><i class="fa fa-windows"></i> Parent</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.CategoryDetail.CategoryName</td>
                        <td>@Model.CategoryDetail.CategoryDes</td>
                        <td>@Model.CategoryDetail.ParentName</td>
                        <td>
                            <a asp-page="/Category/Edit" asp-route-id="@Model.CategoryDetail.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                            <a asp-page="/Category/List" asp-route-id="@Model.CategoryDetail.Id" asp-page-handler="Delete" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <a href='javascript:history.go(-1)' class="btn btn-round btn-primary">Back</a>
        </div>
    </div>
</div>
